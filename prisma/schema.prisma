// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  password     String
  name         String
  role         Role     @default(REGULAR)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  agendas      Agenda[] @relation("ownerAgendas")
  addedAgendas Agenda[] @relation("AddedAgendas")
}

enum Role {
  REGULAR
  MANAGER
  ADMIN
}

model Agenda {
  id         String   @id @default(uuid())
  timezone   String   @default("UTC")
  owner      User     @relation("ownerAgendas", fields: [ownerId], references: [id], onDelete: Cascade)
  addedUsers User[]   @relation("AddedAgendas")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  tasks      Task[]
  ownerId    String
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  agenda      Agenda   @relation(fields: [agendaId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  agendaId    String
}
